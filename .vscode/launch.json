    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "api/app.py",
                "FLASK_DEBUG": "1",
                "DEVELOPMENT": "True",
                "DEBUG": "True",
                "TESTING": "True",
                "CSRF_ENABLED": "False",
                "JWT_COOKIE_SECURE": "False",
                "JWT_COOKIE_SAMESITE": "LAX",
                "JWT_COOKIE_CSRF_PROTECT": "False",
            },
            "args": [
                "run",
                "--no-debugger",
                "--port",
                "5005"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}